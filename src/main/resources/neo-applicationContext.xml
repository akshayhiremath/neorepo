<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
	http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd"
	xmlns:context="http://www.springframework.org/schema/context">

	<bean id="main" class="com.akshay.client.neo.Main"/>
	<bean id="restClient" class="com.akshay.client.neo.rest.service.RestWebServiceClient" init-method="init"/>
	<bean id="responseParser" class="com.akshay.client.neo.rest.utils.ResponseParserUtil" init-method="init"/>
	<bean id="neoProcessor" class="com.akshay.client.neo.rest.processor.NeoProcessor"/>
	
	<bean id="jacksonMapper" class="com.fasterxml.jackson.databind.ObjectMapper"/>
	<bean id="gsonParser" class="com.google.gson.JsonParser"/>
	
	<context:component-scan base-package="com.akshay.client.neo" />

</beans>